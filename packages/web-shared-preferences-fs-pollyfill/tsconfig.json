{
  "compilerOptions": {
    "declaration": true,
    "module": "es6",
    "lib": ["es6", "es5", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2018"
  },
  "include": ["./src/**/*.ts"]
}
